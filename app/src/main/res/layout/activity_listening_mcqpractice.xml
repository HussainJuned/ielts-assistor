<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListeningMCQPractice">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        android:layout_width="0dp"
        android:layout_height="58dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></include>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="505dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorSplash"
                            android:padding="5dp"
                            android:text="An Overview"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/OverviewMCQ"
                            android:textColor="#000" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_marginBottom="@dimen/layout_small_margin"
                            android:layout_marginTop="2dp"
                            android:padding="2dp"
                            android:text="@string/strategy1"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:padding="2dp"
                            android:text="play below audio and anwer the following questions"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="10"
                            android:background="@color/cardview_shadow_start_color"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/buttonPlayPause1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/ic_media_play_dark" />

                            <SeekBar
                                android:id="@+id/seekBar1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:layout_weight="8" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="00:24" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView29"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_small_margin"
                            android:text="1. Only rescue birds that are......"
                            android:textColor="#000" />

                        <RadioGroup
                            android:id="@+id/radioGroupMcqPractice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp">

                            <RadioButton
                                android:id="@+id/radioOption1McqPractice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A. all alone" />

                            <RadioButton
                                android:id="@+id/radioOption2McqPractice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="B. sitting on the ground" />

                            <RadioButton
                                android:id="@+id/radioOption3McqPractice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="C. obviously injured" />
                        </RadioGroup>

                        <TextView
                            android:id="@+id/resultOfQstn1OfMCQPractice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/explanationMCQ1"
                            android:textAlignment="textStart"
                            android:textColor="#000"
                            android:visibility="gone" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    app:cardElevation="2dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginTop="15sp"
                            android:text="@string/strategy2"
                            android:textAlignment="textStart"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/textView32"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginTop="15sp"
                            android:text="@string/strategy3"
                            android:textAlignment="textStart"
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/textView33"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15sp"
                            android:background="@color/colorHeading1"
                            android:padding="5dp"
                            android:text="Now, apply strategy 2 and 3 to the following questions."
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="10"
                            android:background="@color/cardview_shadow_start_color"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/buttonPlayPause2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/ic_media_play_dark" />

                            <SeekBar
                                android:id="@+id/seekBar2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:layout_weight="8" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="00:24" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView34"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15sp"
                            android:layout_weight="10"
                            android:text="2. What is the best way of protection from harmful bacteria?"
                            android:textColor="#290101" />

                        <RadioGroup
                            android:id="@+id/radioGroupMcqPractice2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_weight="10">

                            <RadioButton
                                android:id="@+id/radioOption1McqPractice2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A. following hygiene rules" />

                            <RadioButton
                                android:id="@+id/radioOption2McqPractice2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="B. using antibiotics" />

                            <RadioButton
                                android:id="@+id/radioOption3McqPractice2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="C. visiting doctor regularly" />
                        </RadioGroup>

                        <TextView
                            android:id="@+id/resultOfQstn2OfMCQPractice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/explanationMCQ2"
                            android:textColor="#000"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:background="@color/cardview_shadow_start_color"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/buttonPlayPause3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/ic_media_play_dark" />

                            <SeekBar
                                android:id="@+id/seekBar3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:layout_weight="8" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="00:24" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView37"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15sp"
                            android:text="3. The tomato originally came from...."
                            android:textAlignment="textStart"
                            android:textColor="#2d0101"
                            android:textSize="14sp" />

                        <RadioGroup
                            android:id="@+id/radioGroupMcqPractice3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="15dp">

                            <RadioButton
                                android:id="@+id/radioOption1McqPractice3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="A. Mexico" />

                            <RadioButton
                                android:id="@+id/radioOption2McqPractice3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="B. Spain" />

                            <RadioButton
                                android:id="@+id/radioOption3McqPractice3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="C. Peru" />
                        </RadioGroup>

                        <TextView
                            android:id="@+id/resultOfQstn3OfMCQPractice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/explanationMCQ2"
                            android:textColor="#000"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/textView39"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/endingMessage2"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="14sp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>

